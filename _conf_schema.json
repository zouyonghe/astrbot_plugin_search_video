{
    "max_duration": {
        "description": "哔哩哔哩限制的最大视频时长（秒）",
        "type": "int",
        "hint": "单位为秒，超过此时长的视频只发链接不下载视频",
        "default": 600
    },
    "cookie": {
        "description": "B站cookie",
        "type": "text",
        "hint": "可以填也可以不填，理论上不影响，如果下载视频经常失败，可以填一下。"
    },
    "is_save": {
        "description": "是否保存视频",
        "type": "bool",
        "hint": "保存路径为data/plugins_data/astrbot_plugin_search_video"
    },
    "show_download_prompt": {
        "description": "是否提示正在下载",
        "type": "bool",
        "default": true,
        "hint": "开启后在下载前发送“正在下载”提示"
    },
    "cards_per_row": {
        "description": "候选菜单的列数",
        "type": "int",
        "hint": "每页候选菜单共20个视频， 此配置可设定以多少列显示",
        "default": 3
    },
    "timeout": {
        "description": "超时时间（秒）",
        "type": "int",
        "hint": "等待用户选视频的超时时间，超时自动退出",
        "default": 60
    }
}
